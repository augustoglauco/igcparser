<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/medium_margin"
    android:layout_marginLeft="@dimen/large_margin"
    android:layout_marginRight="@dimen/large_margin"
    android:layout_marginTop="@dimen/medium_margin">

    <RelativeLayout
        android:id="@+id/view_file_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/extra_large_margin"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin"
        android:paddingTop="@dimen/extra_large_margin">

        <TextView
            android:id="@+id/view_file_txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/view_file_txt_date"
            android:drawableLeft="@drawable/ic_small_file"
            android:drawablePadding="@dimen/large_margin"
            android:drawableTintMode="src_over"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2016-9-5-XCS-AAA-01.igc"
            android:textSize="@dimen/material_text_body"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/view_file_txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/view_file_txt_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/small_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="07/12/88"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/view_file_txt_pilot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_file_txt_name"
            android:layout_marginLeft="@dimen/extra_extra_large_margin"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Santiago Hollmann"
            android:textSize="@dimen/material_text_caption" />

        <TextView
            android:id="@+id/view_file_txt_glider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_file_txt_pilot"
            android:layout_marginLeft="@dimen/extra_extra_large_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Schleicher K-8 (LV-Y8C)"
            android:textSize="@dimen/material_text_caption" />


    </RelativeLayout>
</android.support.v7.widget.CardView>
